%tr
  %th{ scope: 'row', style: 'color:green' }
    = link_to account.name, account_path(account), class: 'text-decoration-none'
  %td= account.description
  %td.text-right{class: "#{number_class(account.initial_amount)}"}
    = number_to_currency(account.initial_amount)
  %td.text-right{class: "#{number_class(account.balance)}"}
    = number_to_currency(account.balance)
  %td
    .action-column
      = link_to edit_account_path(account), 'data-controller': 'turbo',
                                            title: 'Edit account' do
        %i.fa-solid.fa-pencil
      = link_to account_path(account), data: { turbo_method: :delete,
                                               turbo_confirm: 'Are you sure that you want to delete this account with all of its records?' },
                                       title: 'Delete account' do
        %i.fa-solid.fa-trash
