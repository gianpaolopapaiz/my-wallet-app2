%div.bg-white.main-box-shadow.default-border-radius.p-3.my-3.wallet-card.default-border-radius.p-3
  %div.card-info
    %h6= account.name
    %div
      = account.description
    %div
      Initial Amount:
      = number_to_currency(account.initial_amount)
    %div
      Balance:
      %span{class: "#{number_class(account.balance)}"}
        = number_to_currency(account.balance)
  %div.card-value
    %div{style: 'min-width:60px'}
      = link_to edit_account_path(account), 'data-controller': 'turbo',
                                            class: 'mx-2 text-decoration-none',
                                            title: 'Edit account' do
        %i.fa-solid.fa-pencil
      = link_to account_path(account), data: { turbo_method: :delete,
                                       turbo_confirm: 'Are you sure that you want to delete this account?' },
                                       title: 'Delete account' do
        %i.fa-solid.fa-trash

    %div
      =link_to account_path(account), title: 'Account transactions',
                                      class: 'mx-2' do
        %i.fa-solid.fa-list-ul